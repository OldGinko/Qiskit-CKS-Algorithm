#:kivy 1.1.0

ScreenManagement:
    Root:
	ScreenTwo:
	ScreenThree:




<Root>:
 
	name: 'main'
	draw: draw
	hist: hist
	loading: loading
	text_input: text_input

	BoxLayout:
		orientation: "vertical"
		GridLayout:
			rows:2
			pos_hint: {"x": 0.39, 'y':0.6}			
			Label:
				size_hint: 0.0, 0.2
				text: "Enter a Hermititian Matrix to get its Eigenvalues and a Quantum Output State"
				
			TextInput:
				size_hint: None,None
				width: 180
				height: 180
				pos_hint: {"x": 0.9, 'y':0.9}
				hint_text: 'Enter Matrix seperated by tabs'
				id:text_input
		Button:
			size_hint: 0.3, 0.2 
			pos_hint: {"x": 0.35, 'y':0.6}
			text: 'Confirm Input'
			disabled: False
			on_press: root.on_enter()
			on_release: root.load()
										
			
		GridLayout:
			rows: 2
			spacing: 40
			padding: 160
			size_hint_y: None
			
			Label:
				text: "Show circuit?"
			CheckBox:
				active: True
				on_active: root.on_checkbox_active(self.active)
				id: draw
				
			Label:					
				text: "Show historgrtamm?"			
			CheckBox:
				active: True
				on_active: root.on_checkbox_active(self.active)
				id: hist
		


		BoxLayout:
			size_hint_y: None
			height: 30	
			Button:
				id: loading
				text: 'Load'
				disabled: False
				on_release: 
					app.root.current = 'screen2'
				
<ScreenTwo>:
	name: "screen2"
	BoxLayout:
		orientation: "vertical"
		Image:
			source: "IPE.png"
			size_hint: 0.9, 0.9
			pos_hint: {"x": 0.05, 'y':0.9}	
			allow_stretch: True
		Button:
			text: "Go to Hist"
			pos_hint: {"x": 0.3, 'y':0.2}	
			font_size: 50
			color: 0.4,0.69,1,1
			size_hint: 0.4, 0.3 
			on_press: app.root.current = 'screen3'
		Label:
			pos_hint: {"x": 0, "top": 1.5}
			text: "EW: "+ str(root.EW)
			height: self.texture_size[1]
			font_size: 22
			color: 1,1,1,0.8
		Button:
			size_hint: 0.3, 0.2 
			font_size: 30
			color: 0.4,0.69,1,1
			text: "Close"
			background_color: 0, .8, .4, 1
			on_release: app.root.current = 'main'
						
<ScreenThree>:
	name: "screen3"
	BoxLayout:
		orientation: "vertical"
		Image:
			source: "hist.png"
			size_hint: 0.99, 0.99
			pos_hint: {"x": 0, 'y':0.4}	
			allow_stretch: True
		Button:
			text: "Back to IPE"
			size_hint: 0.3, 0.2 
			background_color: 0.835, .352, .352, 1
			font_size: 30
			color: 0,0,0,0.8
			on_press: app.root.current = 'screen2'
				







				

				